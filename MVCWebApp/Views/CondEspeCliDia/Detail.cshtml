@model List<com.msc.infraestructure.entities.CondEspeCliDia>
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-3 col-sm-3 col-lg-3 col-xs-3">
        @Html.Label("lblTerminal", "Terminal")
    </div>
    <div class="col-md-3 col-sm-3 col-lg-3 col-xs-3">
        <p>@ViewBag.Terminal</p>
    </div>
    <div class="col-md-3 col-sm-3 col-lg-3 col-xs-3">
        @Html.Label("lblTerminal", "Días")
    </div>
    <div class="col-md-3 col-sm-3 col-lg-3 col-xs-3">
        <p>@ViewBag.MaxDias</p>
    </div>
</div>
<table id="datatable-dias" class="table table-striped jambo_table table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Inicia El</th>
            <th>Termina El</th>
            <th>Split</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="row_@item.Id">
                <td>@item.DiaI</td>
                <td>@item.DiaF</td>
                <td>@item.Transporte.Descripcion</td>
            </tr>
        }
    </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        $("#datatable-dias").DataTable({
            paging: false,
            searching: false,
            sorting: false,
            language: _language
        });
    });
</script>