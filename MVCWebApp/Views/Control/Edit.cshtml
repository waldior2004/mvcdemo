@model com.msc.infraestructure.entities.Control
@{ 
    Layout = null;
    using (Html.BeginForm((Model.Id == 0 ? "New":"Edit"), "Control", FormMethod.Post, new { @class = "form-horizontal", role = "form", id="frmControl" }))
    {
        @Html.AntiForgeryToken()
        if (Model.Id == 0)
        {
            <div class="form-group">
                <div class="col-md-12">
                    @Html.HiddenFor(m => m.Id)
                </div>
            </div>
        }
        else
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Id, new { @class = "col-md-3 control-label", style = "text-align: left;" })
                @Html.HiddenFor(m => m.Id)
                <div class="col-md-8 control-label" style="text-align: left;">
                    <span>@Model.Id</span>
                </div>
            </div>
        }
        <div class="form-group has-feedback">
            <div class="col-md-12" title="Tipo de Control Asociado" data-toggle="tooltip" data-placement="right">
                @Html.DropDownListFor(m => m.IdTipoControl, (List<SelectListItem>)ViewBag.lstTipoControl, new { @class = "form-control has-feedback-left" })
                <span class="fa fa-sort form-control-feedback left" aria-hidden="true"></span>
            </div>
        </div>
        <div class="form-group has-feedback">
            <div class="col-md-12" title="Página a la que pertenece el control" data-toggle="tooltip" data-placement="right">
                @Html.DropDownListFor(m => m.IdPagina, (List<SelectListItem>)ViewBag.lstPaginas, new { @class = "form-control has-feedback-left" })
                <span class="fa fa-sort form-control-feedback left" aria-hidden="true"></span>
            </div>
        </div>
        <div class="form-group has-feedback">
            <div class="col-md-12" title="Breve Descripción" data-toggle="tooltip" data-placement="right">
                @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control has-feedback-left", placeholder = "Descripción" })
                <span class="fa fa-align-justify form-control-feedback left" aria-hidden="true"></span>
            </div>
        </div>
        <div class="form-group has-feedback">
            <div class="col-md-12" title="Ruta MVC del control" data-toggle="tooltip" data-placement="right">
                @Html.TextBoxFor(m => m.Url, new { @class = "form-control has-feedback-left", placeholder = "Url" })
                <span class="fa fa-link form-control-feedback left" aria-hidden="true"></span>
            </div>
        </div>
    }
}
