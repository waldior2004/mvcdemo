@model com.msc.infraestructure.entities.Provision
@{ 
    Layout = null;
    using (Html.BeginForm((Model.Id == 0 ? "New" : "Edit"), "Provision", FormMethod.Post, new { @class = "form-horizontal", role = "form", id="frmProvision" }))
    {
        @Html.AntiForgeryToken()
        if (Model.Id == 0)
        {
            <div class="form-group">
                <div class="col-md-12">
                    @Html.HiddenFor(m => m.Id)
                </div>
            </div>
        }
        else
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Id, new { @class = "col-md-3 control-label", style = "text-align: left;" })
                @Html.HiddenFor(m => m.Id)
                <div class="col-md-8 control-label" style="text-align: left;">
                    <span>@Model.Id</span>
                </div>
            </div>
        }
        <div class="form-group has-feedback">
            <div class="col-md-6 col-sm-6 col-lg-6 col-xs-6" title="Código Provisión" data-toggle="tooltip" data-placement="right">
                @Html.HiddenFor(m => m.IdEstado)
                @Html.TextBoxFor(m => m.Codigo, new { @class = "form-control has-feedback-left", placeholder = "Código Provisión", @readonly = "readonly" })
                <span class="fa fa-align-justify form-control-feedback left" aria-hidden="true"></span>
            </div>
            <div class="col-md-6 col-sm-6 col-lg-6 col-xs-6" title="Usuario Registro" data-toggle="tooltip" data-placement="right">
                @Html.TextBoxFor(m => m.User, new { @class = "form-control has-feedback-left", placeholder = "Usuario Registro", @readonly = "readonly" })
                <span class="fa fa-align-justify form-control-feedback left" aria-hidden="true"></span>
            </div>
        </div>
        <div class="form-group has-feedback">
            <div class="col-md-12 col-md-12 col-sm-12 col-lg-12 col-xs-12" title="Empresa" data-toggle="tooltip" data-placement="right">
                @Html.DropDownListFor(m => m.IdEmpresa, (List<SelectListItem>)ViewBag.lstEmpresas, new { @class = "form-control has-feedback-left" })
                <span class="fa fa-home form-control-feedback left" aria-hidden="true"></span>
            </div>
        </div>
        <div class="form-group has-feedback">
            <div class="col-md-12 col-md-12 col-sm-12 col-lg-12 col-xs-12" title="Sucursal" data-toggle="tooltip" data-placement="right">
                @Html.DropDownListFor(m => m.IdSucursal, (List<SelectListItem>)ViewBag.lstSucursales, new { @class = "form-control has-feedback-left" })
                <span class="fa fa-sort form-control-feedback left" aria-hidden="true"></span>
            </div>
        </div>
        <div class="form-group has-feedback">
            <div class="col-md-6 col-md-6 col-sm-6 col-lg-6 col-xs-6" title="Tipo Provisión" data-toggle="tooltip" data-placement="right">
                @Html.DropDownListFor(m => m.IdTipoProvision, (List<SelectListItem>)ViewBag.lstTipoProvision, new { @class = "form-control has-feedback-left" })
                <span class="fa fa-sort form-control-feedback left" aria-hidden="true"></span>
            </div>
            <div class="col-md-6 col-md-6 col-sm-6 col-lg-6 col-xs-6" title="Cuenta Contable" data-toggle="tooltip" data-placement="right">
                @Html.DropDownListFor(m => m.IdCuentaContable, (List<SelectListItem>)ViewBag.lstCuentaContable, new { @class = "form-control has-feedback-left" })
                <span class="fa fa-sort form-control-feedback left" aria-hidden="true"></span>
            </div>
        </div>
        <div class="form-group has-feedback">
            <div class="col-md-6 cols-sm-6 col-xs-6 col-lg-6" title="Razón Social del Proveedor" data-toggle="tooltip" data-placement="right">
                @Html.HiddenFor(m => m.IdProveedor)
                @Html.TextBox("DescProveedor", (Model.Proveedor != null ? Model.Proveedor.RazonSocial : ""), new { @class = "form-control has-feedback-left", placeholder = "Razon social del Proveedor" })
                <span class="fa fa-home form-control-feedback left" aria-hidden="true"></span>
                <span class="fa fa-check-circle form-control-feedback right" aria-hidden="true" style='@(Model.Id == 0 ? "" : "color: green;")' ></span>
            </div>
            <div class="col-md-6 cols-sm-6 col-xs-6 col-lg-6" title="Código de la O/C" data-toggle="tooltip" data-placement="right">
                @Html.HiddenFor(m => m.IdOrdenCompra)
                @Html.TextBox("DescOC", (Model.OrdenCompra != null ? Model.OrdenCompra.Codigo : ""), new { @class = "form-control has-feedback-left", placeholder = "Código de la O/C" })
                <span class="fa fa-industry form-control-feedback left" aria-hidden="true"></span>
                <span class="fa fa-check-circle form-control-feedback right" aria-hidden="true" style='@(Model.Id == 0 ? "" : "color: green;")'></span>
            </div>
        </div>
        <script type="text/javascript">
            showAutocomplete('#DescProveedor', '/AutoComplete/Proveedores', "desc", "#IdProveedor");
            showCascade("#IdEmpresa", "SucusalesxEmpresa", "#IdSucursal", "Sucursal");
            showAutocomplete('#DescOC', '/AutoComplete/OrdenesCompra', "desc", "#IdOrdenCompra");
        </script>
        <div class="form-group has-feedback">
            <div class="col-md-6 cols-sm-6 col-xs-6 col-lg-6" title="Moneda" data-toggle="tooltip" data-placement="right">
                @Html.DropDownListFor(m => m.IdMoneda, (List<SelectListItem>)ViewBag.lstMonedas, new { @class = "form-control has-feedback-left" })
                <span class="fa fa-money form-control-feedback left" aria-hidden="true"></span>
            </div>
            <div class="col-md-6 cols-sm-6 col-xs-6 col-lg-6" title="Monto" data-toggle="tooltip" data-placement="right">
                @Html.TextBoxFor(m => m.Monto, new { @class = "form-control has-feedback-left", placeholder = "Monto" })
                <span class="fa fa-calculator form-control-feedback left" aria-hidden="true"></span>
            </div>
        </div>
        <div class="form-group has-feedback">
            <div class="col-md-12 cols-sm-12 col-xs-12 col-lg-12" title="Concepto" data-toggle="tooltip" data-placement="right">
                @Html.TextAreaFor(m => m.Concepto, new { @class = "form-control has-feedback-left", placeholder = "Concepto" })
                <span class="fa fa-comment form-control-feedback left" aria-hidden="true"></span>
            </div>
        </div>
        <div class="form-group has-feedback">
            <div class="col-md-3 cols-sm-3 col-xs-3 col-lg-3" title="Mes Provisión" data-toggle="tooltip" data-placement="right">
                @Html.TextBoxFor(m => m.MesProv, new { @class = "form-control has-feedback-left", placeholder = "Mes Provisión", @readonly = "readonly" })
                <span class="fa fa-calendar form-control-feedback left" aria-hidden="true"></span>
            </div>
            <div class="col-md-3 cols-sm-3 col-xs-3 col-lg-3" title="Año Provisión" data-toggle="tooltip" data-placement="right">
                @Html.TextBoxFor(m => m.AnioProv, new { @class = "form-control has-feedback-left", placeholder = "Año Provisión", @readonly = "readonly" })
                <span class="fa fa-calendar form-control-feedback left" aria-hidden="true"></span>
            </div>
            <div class="col-md-3 cols-sm-3 col-xs-3 col-lg-3" title="Mes Servicio" data-toggle="tooltip" data-placement="right">
                @Html.TextBoxFor(m => m.MesServ, new { @class = "form-control has-feedback-left", placeholder = "Mes Servicio" })
                <span class="fa fa-calendar form-control-feedback left" aria-hidden="true"></span>
            </div>
            <div class="col-md-3 cols-sm-3 col-xs-3 col-lg-3" title="Año Servicio" data-toggle="tooltip" data-placement="right">
                @Html.TextBoxFor(m => m.AnioServ, new { @class = "form-control has-feedback-left", placeholder = "Año Servicio" })
                <span class="fa fa-calendar form-control-feedback left" aria-hidden="true"></span>
            </div>
        </div>
        <div class="form-group has-feedback">
            <div class="col-md-6 cols-sm-6 col-xs-6 col-lg-6" title="Comentario 1" data-toggle="tooltip" data-placement="right">
                @Html.TextAreaFor(m => m.ComentarioUno, new { @class = "form-control has-feedback-left", placeholder = "Comentario 1" })
                <span class="fa fa-comment form-control-feedback left" aria-hidden="true"></span>
            </div>
            <div class="col-md-6 cols-sm-6 col-xs-6 col-lg-6" title="Comentario 2" data-toggle="tooltip" data-placement="right">
                @Html.TextAreaFor(m => m.ComentarioDos, new { @class = "form-control has-feedback-left", placeholder = "Comentario 2" })
                <span class="fa fa-comment form-control-feedback left" aria-hidden="true"></span>
            </div>
        </div>
    }
}