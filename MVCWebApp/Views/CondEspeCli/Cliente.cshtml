@model List<com.msc.infraestructure.entities.CondEspeCli>
@{
    Layout = null;
 }
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Mantenimiento de Condiciones Especiales</h2>
                <ul class="nav navbar-right panel_toolbox" style="min-width: 10px;">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#" class="new-item" data-val-url="/CondEspeCli/New">Nuevo</a>
                                <a href="#" class="del-group" data-val-url="/CondEspeCli/Delete">Eliminar</a>
                                <a href="#" class="hist-group" data-val-url="/CondEspeCli/Historial" data-val-tipo="Cliente">Ver Historial</a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div id="msgTable" style="font-weight: bolder;">@ViewBag.Message</div>
            <br />
            <div class="x_content">
                <table id="datatable-clientes" class="table table-striped jambo_table table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Cliente</th>
                            <th>Nombre</th>
                            <th>F. Inicio</th>
                            <th>F. Fin</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.Id">
                                <td>@item.DescReferencia</td>
                                <td>@item.Nombre</td>
                                <td>@item.FechaInicio.ToString("dd/MM/yyyy")</td>
                                <td>@item.FechaFin.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="hidden-xs hidden-sm visible-md visible-lg">
                                        <a href="#" class="view-item" data-toggle="modal" data-val-id="@item.Id" data-val-url="/CondEspeCli/View"><span class="glyphicon glyphicon-list-alt"></span> Ver</a> &nbsp;&nbsp;
                                        <a href="#" class="edit-item" data-toggle="modal" data-val-id="@item.Id" data-val-url="/CondEspeCli/Edit"><span class="glyphicon glyphicon-edit"></span> Editar</a>  &nbsp;&nbsp;
                                        <a href="#" class="del-item" data-toggle="modal" data-val-id="@item.Id"><span class="glyphicon glyphicon-trash"></span> Eliminar</a>
                                    </div>
                                    <div class="visible-xs visible-sm hidden-md hidden-lg">
                                        <a href="#" class="view-item" data-toggle="modal" data-val-id="@item.Id" data-val-url="/CondEspeCli/View"><span class="glyphicon glyphicon-list-alt"></span></a> &nbsp;&nbsp;
                                        <a href="#" class="edit-item" data-toggle="modal" data-val-id="@item.Id" data-val-url="/CondEspeCli/Edit"><span class="glyphicon glyphicon-edit"></span></a>  &nbsp;&nbsp;
                                        <a href="#" class="del-item" data-toggle="modal" data-val-id="@item.Id"><span class="glyphicon glyphicon-trash"></span></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <script type="text/javascript">
                    $(document).ready(function () {
                        _formLoadTabCondEspe("#datatable-clientes", "#tab_content1", "Cliente");
                    });
                </script>
            </div>
        </div>
    </div>
</div>