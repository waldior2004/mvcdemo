
@model List<com.msc.infraestructure.entities.ImpuestoProveedor>
@{
    Layout = null;
}
<div id="msgTable2" style="font-weight: bolder;">@ViewBag.Message</div>
<br />
<table id="datatable-responsive-imp" class="table table-striped jambo_table table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Tipo Impuesto</th>
            <th>Descripción</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="row_@item.Id">
                <td>@item.Impuesto.TipoImpuesto.Descripcion</td>
                <td>@item.Impuesto.Descripcion</td>
                <td>
                    <div class="hidden-xs hidden-sm visible-md visible-lg">
                        <a href="#" class="del-item" data-toggle="modal" data-val-id="@item.Id"><span class="glyphicon glyphicon-trash"></span> Eliminar</a> &nbsp;&nbsp;
                        <a href="#" class="edit-item" data-toggle="modal" data-val-id="@item.Id" data-val-url="/ImpuestoProveedor/Edit"><span class="glyphicon glyphicon-edit"></span> Editar</a> 
                    </div>
                    <div class="visible-xs visible-sm hidden-md hidden-lg">
                        <a href="#" class="del-item" data-toggle="modal" data-val-id="@item.Id"><span class="glyphicon glyphicon-trash"></span></a> &nbsp;&nbsp;
                        <a href="#" class="edit-item" data-toggle="modal" data-val-id="@item.Id" data-val-url="/ImpuestoProveedor/Edit"><span class="glyphicon glyphicon-edit"></span></a> 
                        
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    $(document).ready(function () {
        selected_imp = [];

        $("#datatable-responsive-imp").DataTable({
            columns: [null, null, { orderable: false }],
            select: _select,
            language: _language,
            paging: false,
            searching: false,
            drawCallback: function (settings) {
                _formDetailDeleteTarget3(".x_content3", "ImpuestoProveedor");
                _formEditDeleteExtendDetail(".x_content3", "ImpuestoProveedor");
            }
        });

        _selectBehaviourExtend("#datatable-responsive-imp", selected_imp);
    });
</script>

