@model List<com.msc.infraestructure.entities.TarifaCE>
@{
    Layout = null;
    ViewBag.Title = "Mantenimiento de Tarifas de Condiciones de Energía";
}
<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>@ViewBag.Title</h2>
                    <ul class="nav navbar-right panel_toolbox" style="min-width: 10px;">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="#" class="new-item" data-val-url="/TarifaCE/New">Nuevo</a>
                                    <a href="#" class="apro-group" data-val-url="/TarifaCE/Aprobar">Aprobar</a>
                                    <a href="#" class="del-group" data-val-url="/TarifaCE/Delete">Eliminar</a>
                                    <a href="#" class="hist-group" data-val-url="/TarifaCE/Historial">Ver Historial</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>

                <div class="x_content">
                        <table id="datatable-responsive" class="table table-striped jambo_table table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Terminal</th>
                                    <th>Período</th>
                                    <th>Importe</th>
                                    <th>F. Inicio</th>
                                    <th>F. Fin</th>
                                    <th>Estado</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row_@item.Id">
                                        <td>@item.Terminal.Descripcion</td>
                                        <td>@item.PerTarifa.Descripcion</td>
                                        <td>@item.Moneda.Breve  @item.Importe</td>
                                        <td>@item.FechaInicio.ToString("dd/MM/yyyy")</td>
                                        <td>@item.FechaFin.ToString("dd/MM/yyyy")</td>
                                        <td>@item.Estado.Descripcion</td>
                                        <td>
                                            <div class="hidden-xs hidden-sm visible-md visible-lg">
                                                <a href="#" class="view-item" data-toggle="modal" data-val-id="@item.Id" data-val-url="/TarifaCE/View"><span class="glyphicon glyphicon-list-alt"></span> Ver</a> &nbsp;&nbsp;
                                                <a href="#" class="edit-item" data-toggle="modal" data-val-id="@item.Id" data-val-url="/TarifaCE/Edit"><span class="glyphicon glyphicon-edit"></span> Editar</a>  &nbsp;&nbsp;
                                                @if (item.Estado.Descripcion == "Registrado")
                                                {
                                                <a href="#" class="apro-item" data-toggle="modal" data-val-id="@item.Id" data-val-url="/TarifaCE/Aprobar"><span class="glyphicon glyphicon-ok-circle"></span> Aprobar</a>  @:&nbsp; &nbsp;
                                                }
                                                <a href="#" class="del-item" data-toggle="modal" data-val-id="@item.Id"><span class="glyphicon glyphicon-trash"></span> Eliminar</a> 
                                            </div>
                                            <div class="visible-xs visible-sm hidden-md hidden-lg">
                                                <a href="#" class="view-item" data-toggle="modal" data-val-id="@item.Id" data-val-url="/TarifaCE/View"><span class="glyphicon glyphicon-list-alt"></span></a> &nbsp;&nbsp;
                                                <a href="#" class="edit-item" data-toggle="modal" data-val-id="@item.Id" data-val-url="/TarifaCE/Edit"><span class="glyphicon glyphicon-edit"></span></a>  &nbsp;&nbsp;
                                                @if (item.Estado.Descripcion == "Registrado")
                                                {
                                                <a href="#" class="apro-item" data-toggle="modal" data-val-id="@item.Id" data-val-url="/TarifaCE/Aprobar"><span class="glyphicon glyphicon-ok-circle"></span></a>  @:&nbsp; &nbsp;
                                                }
                                                <a href="#" class="del-item" data-toggle="modal" data-val-id="@item.Id"><span class="glyphicon glyphicon-trash"></span></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    <script type="text/javascript">
                            $(document).ready(function () {
                                _formLoadExtend("TarifaCE", [null, null, null, null, null, null, { orderable: false }]);
                                _formLoadTarifaCEOs();
                            });
                    </script>
                </div>
            </div>
        </div>
    </div>
</div>