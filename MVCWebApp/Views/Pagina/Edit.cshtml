@model com.msc.infraestructure.entities.Pagina
@{ 
    Layout = null;
    using (Html.BeginForm((Model.Id == 0 ? "New" : "Edit"), "Pagina", FormMethod.Post, new { @class = "form-horizontal", role = "form", id="frmPagina" }))
    {
        @Html.AntiForgeryToken()
        if (Model.Id == 0)
        {
            <div class="form-group">
                <div class="col-md-12">
                    @Html.HiddenFor(m => m.Id)
                </div>
            </div>
        }
        else
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Id, new { @class = "col-md-3 control-label", style = "text-align: left;" })
                @Html.HiddenFor(m => m.Id)
                <div class="col-md-8 control-label" style="text-align: left;">
                    <span>@Model.Id</span>
                </div>
            </div>
        }
        <div class="form-group has-feedback">
            <div class="col-md-12 cols-sm-12 col-xs-12 col-lg-12" title="Breve Descripción" data-toggle="tooltip" data-placement="right">
                @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control has-feedback-left", placeholder = "Descripción" })
                <span class="fa fa-align-justify form-control-feedback left" aria-hidden="true"></span>
            </div>
        </div>
        <div class="form-group has-feedback">
            <div class="col-md-12 cols-sm-12 col-xs-12 col-lg-12" title="Título de la Página" data-toggle="tooltip" data-placement="right">
                @Html.TextBoxFor(m => m.Titulo, new { @class = "form-control has-feedback-left", placeholder = "Título" })
                <span class="fa fa-align-justify form-control-feedback left" aria-hidden="true"></span>
            </div>
        </div>
        <div class="form-group has-feedback">
            <div class="col-md-12 cols-sm-12 col-xs-12 col-lg-12" title="Ruta MVC de la página" data-toggle="tooltip" data-placement="right">
                @Html.TextBoxFor(m => m.Url, new { @class = "form-control has-feedback-left", placeholder = "Url" })
                <span class="fa fa-link form-control-feedback left" aria-hidden="true"></span>
            </div>
        </div>
        <div class="form-group has-feedback">
            <div class="col-md-12 cols-sm-12 col-xs-12 col-lg-12" title="Orden en la generación del menú" data-toggle="tooltip" data-placement="right">
                @Html.TextBoxFor(m => m.Orden, new { @class = "form-control has-feedback-left", placeholder = "Orden" })
                <span class="fa fa-calculator form-control-feedback left" aria-hidden="true"></span>
            </div>
        </div>
        <div class="form-group has-feedback">
            <div class="col-md-12 cols-sm-12 col-xs-12 col-lg-12" title="Página padre a la que pertenece" data-toggle="tooltip" data-placement="right">
                @Html.DropDownListFor(m => m.IdPagina, (List<SelectListItem>)ViewBag.lstPaginas, new { @class = "form-control has-feedback-left" })
                <span class="fa fa-sort form-control-feedback left" aria-hidden="true"></span>
            </div>

        </div>
    }
}