            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Impuestos Afectos del Proveedor</h2>
                <ul class="nav navbar-right panel_toolbox" style="min-width: 10px;">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#" class="back-item" data-val-url="/Proveedor/Index">Volver</a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <br />
            <div class="x_content">
                <table id="datatable-responsive-imp" class="table table-striped jambo_table table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Tipo Impuesto</th>
                            <th>Descripción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Impuestos)
                        {
                            <tr id="row_@item.Id">
                                <td>@item.Impuesto.TipoImpuesto.Descripcion</td>
                                <td>@item.Impuesto.Descripcion</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        _formBack();
        $("#datatable-responsive-dc").DataTable({
            language: _language,
            paging: false,
            sorting: false
        });
        $("#datatable-responsive-cp").DataTable({
            language: _language,
            paging: false,
            sorting: false
        });
        $("#datatable-responsive-imp").DataTable({
            language: _language,
            paging: false,
            sorting: false
        });
    });
</script>