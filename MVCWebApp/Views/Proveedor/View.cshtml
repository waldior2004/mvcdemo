            </div>
            <br />
            <div class="x_content">
                <table id="datatable-responsive-cp" class="table table-striped jambo_table table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Cargo</th>
                            <th>Nombre Completo</th>
                            <th>Correo</th>
                            <th>Ind. Contacto</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ContactoProveedor)
                        {
                            <tr id="row_@item.Id">
                                <td>@item.Cargo.Descripcion</td>
                                <td>@item.NombreCompleto</td>
                                <td>@item.Correo</td>
                                <td>@item.IndContacto</td>
                            </tr>
